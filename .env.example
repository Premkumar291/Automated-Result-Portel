# Environment Variables for Automated College Result Portal

# Database Configuration
MONGO_URI=mongodb://localhost:27017/automated_result_portal

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Server Configuration
PORT=8080
NODE_ENV=development

# AI Service Configuration (Groq)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# PDF Processing Configuration
PDF_UPLOAD_MAX_SIZE=50MB
PDF_OUTPUT_DIR=./backend/outputs
EXCEL_OUTPUT_DIR=./backend/outputs/excel

# Optional: Additional AI Services
# OPENAI_API_KEY=sk_your_openai_key_here
# ANTHROPIC_API_KEY=sk_your_anthropic_key_here

# Security Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Logging Configuration
LOG_LEVEL=info
DEBUG_PDF_PROCESSING=false
